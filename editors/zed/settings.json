// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"ui_font_size": 16,
	"buffer_font_size": 15,
	"theme": {
		"mode": "dark",
		"dark": "Ayu Mirage",
		"light": "One Dark"
	},
	"ui_font_family": "MonaspiceRn Nerd Font",
	"buffer_font_family": "MonaspiceRn Nerd Font",
	"hard_tabs": true,
	"buffer_line_height": { "custom": 2.1 },
	"autosave": {
		"after_delay": {
			"milliseconds": 30000
		}
	},
	"cursor_blink": true,
	"cursor_shape": "bar",
	"scrollbar": {
		"show": "system",
		"cursors": true,
		"git_diff": true,
		"search_results": true,
		"selected_symbol": true,
		"diagnostics": true
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true
	},
	"file_types": {
		"csv(semicolon)": ["csv", "dat"],
		"jsonc": ["json"],
		"astro": ["mdx"]
	},
	"indent_guides": {
		"enabled": true,
		"line_width": 1,
		"active_line_width": 1,
		"coloring": "fixed",
		"background_coloring": "disabled"
	},
	"inlay_hints": {
		"enabled": false,
		"show_type_hints": true,
		"show_parameter_hints": true,
		"show_other_hints": true,
		"show_background": false,
		"edit_debounce_ms": 700,
		"scroll_debounce_ms": 50
	},
	"languages": {
		"JSONC": {
			"format_on_save": "on",
			"ensure_final_newline_on_save": false
		},
		"Markdown": {
			"remove_trailing_whitespace_on_save": false
		}
	},
	"preferred_line_length": 120,
	"remove_trailing_whitespace_on_save": true,
	"show_whitespaces": "all",
	"tab_size": 4,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"terminal": {
		"alternate_scroll": "off",
		"blinking": "terminal_controlled",
		"dock": "bottom",
		"detect_venv": {
			"on": {
				"directories": [".env", "env", ".venv", "venv"],
				"activate_script": "default"
			}
		},
		"option_as_meta": true,
		"button": false,
		"toolbar": {
			"title": true
		},
		"working_directory": "current_project_directory"
	},
	"project_panel": {
		"button": true,
		"default_width": 140,
		"dock": "left",
		"file_icons": true,
		"folder_icons": true,
		"git_status": true,
		"indent_size": 32,
		"auto_reveal_entries": true,
		"auto_fold_dirs": true,
		"scrollbar": {
			"show": "always"
		}
	},
	"unnecessary_code_fade": 0.3
}
