{
	"Front matter": {
		"prefix": "matter",
		"description": "Crea front matter para un documento",
		"body": [
			"---",
			"date: date",
			"title: title",
			"author: ${1:AlbertoVf}",
			"tags: []",
			"resume: ${2:descripcion}",
			// "footer: \\${title} - [\\${pageNo}]",
			"---"
		]
	},
	"Marp front matter": {
		"prefix": "matter",
		"description": "Crea un front matter para una presentacion con marp",
		"body": [
			"---",
			"marp: true",
			"size: 16:9",
			"paginate: true",
			"theme: uncover",
			"transition: fade-out",
			"math: mathjax",
			"---",
			"<style>",
			"\th1 +h2{ font-style: italic; font-size: 95%; }",
			"\tp{ text-align:justify; letter-spacing: 0.4px; font-size: 70%; }",
			"\tblockquote{ font-style: italic; font-size:100%; }",
			"</style>",
			"${0}"
		]
	},
	"Tabla": {
		"prefix": "table",
		"description": "Crea una tabla",
		"body": [
			"| $1 | $2 | $3 |",
			"| -- | -- | -- |",
			"| $4 | $5 | $6 |"
		]
	},
	"Wikilinks": {
		"prefix": "wiki",
		"description": "Wikilinks. Crea wikilinks",
		"body": [
			"![[./$1.md]]",
			"$0"
		],
	},
	"Code block": {
		"prefix": "codeblock",
		"description": "Code block. ",
		"body": [
			"```$1",
			"$0",
			"```"
		],
	},
	"Markdown Task List": {
		"prefix": "task",
		"body": [
			"- [ ] $1",
			"- [ ] $2",
			"- [ ] $3"
		],
		"description": "Insertar una lista de tareas en Markdown"
	},
}
