{
	// https://code.visualstudio.com/docs/editor/userdefinedsnippets#_assign-keybindings-to-snippets
	"Fragmendo de codigo": {
		"prefix"      : "fragment",
		"description" : "Crea un fragmento de codigo",
		"body"        : [
			"\"$1\": {",
			"\t\"prefix\": \"$2\",",
			"\t\"description\": \"$1. $4\",",
			"\t\"body\": [\n\t\"$0\"\n\t],",
			"},"
		]
	},
	"Fragmento de codigo para multiples lenguages": {
		"prefix"      : "fragment",
		"description" : "Fragmento de codigo para multiples lenguages. ",
		"body"        : [
			"\"$1\": {"
			"\t\"scope\": \"$3\","
			"\t\"prefix\": \"$2\","
			"\t\"description\": \"$1\","
			"\t\"body\":["
				"\t\t\"\""
			"\t]"
			"}"
		],
	},

	"Rodear con\" y escapar las existentes": {
		"description" : "Escapa \"",
		"body"        : "\"${TM_SELECTED_TEXT/\"/\\\"/g}\""
	},
	"Plantilla": {
		"prefix"      : "template",
		"description" : "Crea una plantilla",
		"body"        : [
			"\"$1\": {",
			"\"isFileTemplate\": \"true\",",
			"\"description\": \"$1. $4\",",
			"\"body\": [\n\"$0\"\n],",
			"},"
		]
	}
}
