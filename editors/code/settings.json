{
	"[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features", "editor.formatOnSave": false, "files.insertFinalNewline": false },
	"[markdown]": { "editor.defaultFormatter": "yzhang.markdown-all-in-one", "editor.trimAutoWhitespace": false },
	"[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
	"[shellscript]": { "betterAlign.surroundSpace": { "assignment": [ -1, -1 ] } },
	"[tsv]": { "editor.insertSpaces": false },
	"[xml]": { "editor.defaultFormatter": "redhat.vscode-xml" },
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.guides.indentation": false,
		"editor.indentSize": 2
	},
	"better-comments.tags": [
		//* important - [!IMPORTAT]
		{ "bold": true, "color": "#8957e5", "italic": true, "strikethrough": false, "tag": "*" },
		//! warning - [!WARNING]
		{ "bold": false, "color": "#9e6a03", "italic": true, "strikethrough": false, "tag": "!" },
		//: error - [!CAUTION]
		{ "bold": true, "color": "#c73230", "italic": true, "strikethrough": false, "tag": ":" },
		//? help - [!TIP]
		{ "bold": false, "color": "#217b33", "italic": false, "strikethrough": false, "tag": "?" },
		//; note - [!NOTE]
		{ "bold": false, "color": "#1f6feb", "italic": true, "strikethrough": false, "tag": ";" },
		//+ todo
		{ "bold": true, "color": "#818cf8", "italic": true, "strikethrough": false, "tag": "+" },
		//_ delete
		{ "bold": false, "color": "#64748b", "italic": true, "strikethrough": true, "tag": "_" }
	],
	"betterAlign.indentBase": "dontchange",
	"betterAlign.surroundSpace": {
		"arrow": [ 1, 1 ],
		"assignment": [ 1, 1 ],
		"colon": [ 1, 1 ],
		"comment": 4
	},
	"code-runner.clearPreviousOutput": true,
	"code-runner.executorMap": {
		"csharp": "dotnet run --project $dir",
		"java": "java $fileName",
		"typescript": "deno run $dir$fileName"
		// "python": "${workspaceFolder}/venv/bin/python -u"
	},
	"code-runner.runInTerminal": true,
	"code-runner.saveFileBeforeRun": true,
	"codesnap.containerPadding": "2px",
	"codesnap.transparentBackground": true,
	"conventionalCommits.autoCommit": false,
	"conventionalCommits.emojiFormat": "emoji",
	"conventionalCommits.gitmoji": false,
	"conventionalCommits.showEditor": true,
	"css.lint.duplicateProperties": "warning",
	"database-client.highlightSQLBlock": true,
	"debug.terminal.clearBeforeReusing": true,
	"diffEditor.codeLens": true,
	"diffEditor.experimental.showMoves": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.codeActionsOnSave": {
		"editor.action.formatDocument": "explicit",
		"source.addMissingImports": "always",
		"source.convertImportFormat": "explicit",
		"source.fixAll": "always",
		"source.organizeImports": "explicit",
		"source.unusedImports": "never"
	},
	"editor.copyWithSyntaxHighlighting": false,
	"editor.cursorBlinking": "expand",
	"editor.fontFamily": "GeistMono Nerd Font, monaspace",
	"editor.fontLigatures": true,
	"editor.fontSize": 13.5,
	"editor.guides.bracketPairs": true,
	"editor.indentSize": "tabSize",
	"editor.letterSpacing": 1.8,
	"editor.lineHeight": 2.1,
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "all",
	"editor.semanticHighlighting.enabled": true,
	"editor.showUnused": false,
	"editor.smoothScrolling": true,
	"editor.stickyScroll.enabled": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showSnippets": true,
	"editor.suggestSelection": "first",
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 120,
	"emmet.includeLanguages": { "astro": "html" },
	"emmet.showSuggestionsAsSnippets": true,
	"emmet.triggerExpansionOnTab": true,
	"emojisense.languages": {
		"makefile": true,
		"markdown": true,
		"scminput": true
	},
	"errorLens.fontStyleItalic": true,
	"errorLens.fontWeight": "900",
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.js": "$(capture).js.map, $(capture).*.js, $(capture)_*.js",
		"*.jsx": "$(capture)*.js, $(capture)*.jsx, $(capture).*, $(capture).module.*",
		"*.md": "$(capture)*.pdf, $(capture)*.png, $(capture)*.svg, $(capture)*.jpg, $(capture)_*.md",
		"*.scss": "$(capture).css.map, $(capture).*.css, $(capture).scss, $(capture).less, $(capture).sass",
		"*.ts": "$(capture).d.ts.map, $(capture).*.ts, $(capture)*.js, $(capture)*.ts",
		"*.tsx": "$(capture)*.ts, $(capture)*.tsx, $(capture).*, $(capture).module.*",
		".editorconfig": "_config.*,cspell.*,.markdownlint.*,.gitignore",
		".env": "*.env,.env*",
		".gitignore": ".gitattributes, .gitmodules",
		"Dockerfile": ".dockerignore, docker-compose.*, dockerfile*, entrypoint.sh, .env",
		"Makefile": ".env, Dockerfile, package*, composer*,requirements.txt",
		"README*": "authors*, changelog*, code_of_conduct*, contributors*, LICENSE*, .editorconfig",
		"composer.json": ".php*.cache, composer.lock, phpunit.xml*, psalm*.xml",
		"package.json": ".commitlint*, .eslint*, .huskyrc*, .lintstagedrc*, .nodemon*, .npm*, .pnpm*, .prettier*, .stylelint*, .yarnrc*, commitlint*, eslint*, lint-staged*, nodemon*, package-lock.json,pnpm-lock.json, tslint*, vercel*, webpack*, workspace.json,  yarn*, tsconfig*, jest.*"
	},
	"explorer.incrementalNaming": "smart",
	"files.associations": {
		"*.csv": "csv (semicolon)",
		"*.dat": "csv (pipe)",
		"*.json": "jsonc",
		"*.mdx": "astro",
		"LICENSE": "markdown"
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 60000,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"git.autoStash": true,
	"git.autofetch": true,
	"git.closeDiffOnOperation": true,
	"git.enableCommitSigning": true,
	"git.followTagsWhenSync": true,
	"git.mergeEditor": true,
	"git.showCommitInput": false,
	"githubIssues.queries": [
		{ "label": "All Issues", "query": "repo:${owner}/${repository} sort:created-asc" },
		{ "label": "Author Issues", "query": "author:${user} repo:${owner}/${repository} sort:created-asc" },
		{ "label": "Assigned Issues", "query": "assignee:${user} repo:${owner}/${repository} sort:created-asc" }
	],
	"githubPullRequests.defaultMergeMethod": "squash",
	"githubPullRequests.queries": [
		{ "label": "Assigned To Me", "query": "is:open assignee:${user}" },
		{ "label": "Created By Me", "query": "is:open author:${user}" },
		{ "label": "Waiting For My Review", "query": "is:open review-requested:${user}" }
	],
	"gitlens.graph.layout": "editor",
	"hediet.vscode-drawio.codeLinkActivated": false,
	"hediet.vscode-drawio.resizeImages": null,
	"hediet.vscode-drawio.theme": "Kennedy",
	"html.format.indentHandlebars": true,
	"html.format.indentInnerHtml": true,
	"html.format.templating": true,
	"markdown-preview-enhanced.enableExtendedTableSyntax": true,
	"markdown-preview-enhanced.previewTheme": "vue.css",
	"markdown-preview-enhanced.printBackground": true,
	"markdown.experimental.updateLinksOnPaste": true,
	"markdown.extension.tableFormatter.normalizeIndentation": true,
	"markdown.extension.toc.levels": "2..6",
	"markdown.marp.pdf.noteAnnotations": true,
	"markdown.marp.pdf.outlines": "both",
	"markdown.math.enabled": true,
	"markdown.occurrencesHighlight.enabled": true,
	"markdown.updateLinksOnFileMove.enabled": "always",
	"markdownlint.run": "onSave",
	"merge-conflict.autoNavigateNextConflict.enabled": true,
	"mergeEditor.diffAlgorithm": "advanced",
	"projectManager.supportSymlinksOnBaseFolders": true,
	"python.analysis.autoFormatStrings": true,
	"python.analysis.autoImportCompletions": true,
	"python.terminal.activateEnvInCurrentTerminal": true,
	"python.terminal.executeInFileDir": true,
	"scm.experimental.showSyncView": true,
	"search.mode": "newEditor",
	"search.searchEditor.doubleClickBehaviour": "openLocationToSide",
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.enabled": false,
	"settingsSync.keybindingsPerPlatform": true,
	"symbols.hidesExplorerArrows": false,
	"telemetry.telemetryLevel": "off",
	"testExplorer.mergeSuites": true,
	"testExplorer.useNativeTesting": true,
	"window.closeWhenEmpty": true,
	"window.restoreWindows": "none",
	"window.title": "${dirty}${rootName}${separator}${activeEditorMedium}",
	"workbench.colorCustomizations": {},
	"workbench.colorTheme": "Ayu Mirage Bordered",
	"workbench.editor.customLabels.patterns": {
		// laravel
		"*/app/**/Controllers/**": "${filename}",
		"*/app/Models/**": "${dirname} - ${filename}",
		"*/resources/views/**": "${dirname}.${filename}",
		"*/tests/**/*": "${dirname(1)}.${dirname} - ${filename}"
	},
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.splitInGroupLayout": "vertical",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.startupEditor": "welcomePageInEmptyWorkbench",
	"workbench.tree.indent": 16
}
