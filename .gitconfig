[user]
	name = AlbertoVf
	email = 26661334+AlbertoVf@users.noreply.github.com
[credential]
	helper = store
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[push]
	default = simple
[core]
	whitespace = trailing-space
	symlinks = false
	eol = lf
	autocrlf = input
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	tool = meld
[merge]
	tool = meld
[gui]
	editor = nvim
