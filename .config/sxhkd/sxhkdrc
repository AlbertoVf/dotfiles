	xkill
super + a
	xfce4-appfinder
super + b
	bitwarden-desktop
super + c
	catfish
super + e
	code
super + f
	firefox
super + g
	gparted
super + i
	idea
super + m
	pragha
super + o
	obs
super + p
	pycharm
super + s
	pamac-manager
super + v
	vlc --video-on-top
super + z
	zeal
super + F1
	brave
super + F2
	code
super + F3
	inkscape
super + F4
	gimp
super + F5
	meld
super + F6
	vlc --video-on-top
super + F7
	virtualbox
super + F8
	thunar
super + F9
	evolution
super + F10
	spotify
super + F12
	rofi -show run
super + Return
	alacritty
super + KP_Enter
	gnome-calculator
super + x
	arcolinux-logout
# ALT + KEY
alt + Left
	variety -p
alt + Right
	variety -n
alt + Escape
	xfce4-taskmanager
alt + F1
	rofi -show window
alt + F2
	rofi -show drun
alt + F3
	rofi -show file-browser-extended
alt + F4
	rofi -show ssh
alt + F5
	menu_apps
alt + F6
	menu_time
alt + F7
	menu_network
alt + h
	alacritty -e htop
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#
# CTRL + ALT + key
#

ctrl + alt + h
	rofi -show file-browser-extended -file-browser-dir ~/.config
ctrl + alt + j
	rofi -show file-browser-extended -file-browser-dir ~/Git
ctrl + alt + k
	rofi -show file-browser-extended -file-browser-dir ~/.screenlayout
ctrl + alt + l
	rofi -show file-browser-extended -file-browser-dir ~/Proyectos
ctrl + alt + 1
	alacritty -e xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --off --output HDMI2 --off
ctrl + alt + 2
	alacritty -e xrandr --output eDP1 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI2 --mode 1920x1080 --pos 0x0 --rotate normal

#
# Media KEYS
#

# INCREASE/DECREASE BRIGHTNESS
XF86MonBrightnessUp
	xbacklight -inc 5
XF86MonBrightnessDown
	xbacklight -dec 5

# INCREASE/DECREASE/MUTE VOLUME
XF86AudioMute
	amixer -D pulse set Master 1+ toggle
XF86AudioLowerVolume
	amixer set Master 5%-
XF86AudioRaiseVolume
	amixer set Master 5%+

#
# MULTIMEDIA KEYS
#

XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioStop
	playerctl stop

#
# screeenshooter
#

Print
	scrot 'screenshot_%Y%m%d_%H%M%S.jpg' -e 'mv $f $$(xdg-user-dir SCREENSHOTS)'
alt + Print
	xfce4-screenshooter

#Picom Toggle
ctrl + alt + o
	picom ~/.config/picom/picom-toggle.sh